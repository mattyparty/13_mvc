

<div class = "container">
  <div class="jumbotron">
  <h1>Burgers</h1>
  </div>

  <div class = "row">
    <div class="col-md-6 col-sm-12">
    <h2 class="text-center">Devoured Burgers</h2>
<ol>
  
  {{#each burger_name}}
  {{#if devoured}}
  <li class = "list-group-item">
  {{burger_name}}
  </li>
  {{/if}}
  {{/each}}
 
</ol>
</div>
<div class="col-md-6 col-sm-12">
<h2 class="text-center">Not Devoured Burgers</h2>

<ul>

  {{#each burger_name}}
  {{#unless devoured}}
  
   {{> burgers/burger-devoured devoured=true}}
  
  {{/unless}}
  {{/each}}
  <br>
</ul>
</div>
</div>
<div class='row'>
  <div class='col-4'></div>
  <div class="col-4" id='burger-submit'>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  

  <button class="btn btn-success" type="submit">Add A Burger</button>
</form>
<br>
</div>
</div>
</div>
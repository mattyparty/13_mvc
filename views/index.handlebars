<h1>Burgers</h1>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burger_name}}
  {{#if devoured}}
  {{burger_name}}
  {{/if}}
  {{/each}}
</ul>

<h2>Not Devoured Burgers</h2>

<ul>
  {{#each burger_name}}
  {{#unless devoured}}
  
   {{> burgers/burger-devoured devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  

  <button type="submit">Add A Burger</button>
</form>
